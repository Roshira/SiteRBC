@model IEnumerable<SiteRBC.Models.Data.ReadyProductcs>
<main>

    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Bomb shelters are ready</h1>
                <p class="lead text-body-secondary">
                    On this page there are ready-made bomb shelters for your houses, 
                    apartments, schools, and any other buildings and places. You just
                    need to click on the "Buy" button and they will call you back
                </p>
                <p>
                    <a href="#" class="btn btn-primary my-2">Click to have us call you back</a>
                    <a href="#" class="btn btn-secondary my-2">Support</a>
                </p>
            </div>
        </div>
    </section>
    <div class="album py-5 bg-body-tertiary">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var product in Model)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <img src="@product.AdressImage" width="250" height="200" class="d-block w-100" alt="First slide">
                            <div class="card-body">
                                <p class="card-text">Name: @product.Name; Price: @product.Price; Height: @product.height; Width: @product.width; Length: @product.length; Time for build: @product.timeForBuild.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
                                    </div>
                                    <small class="text-body-secondary">9 mins</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>